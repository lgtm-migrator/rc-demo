{
  "name": "rc-demo",
  "version": "0.1.2",
  "description": "react compoment project demo",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "example": "parcel ./example/index.html",
    "example:build": "rm -rf ./dist/ && parcel build ./example/index.html --out-dir dist --public-url ./",
    "example:deploy": "yarn example:build && gh-pages -d dist",
    "build": "rm -rf ./lib/ && tsc -d --project tsconfig.json --outDir ./lib/",
    "test": "jest -c jest.json",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "prettier": "prettier --write './src/**/*.{ts,tsx}' --config ./.prettierrc",
    "prepare": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-cmpt/rc-demo.git"
  },
  "keywords": [
    "react",
    "react-component",
    "template"
  ],
  "author": "wangcch <wangcch.cc@gmail.com>",
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "emotion": "^10.0.23",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "gh-pages": "^2.1.1",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.1.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "ts-jest": "^25.3.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
